<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">

	<persistence-unit name="WalmartPU" transaction-type="JTA">
		<jta-data-source>java:ds/b2blog</jta-data-source>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.ejb.cfgfile" value="/META-INF/hibernate.cfg.xml" />
			<property name="hibernate.archive.autodetection" value="none" />
			<property name="hibernate.show_sql" value="false" />
			<!--<property name="hibernate.default_schema" value="LOGISTICA" />-->
		</properties>
	</persistence-unit> 
</persistence>
